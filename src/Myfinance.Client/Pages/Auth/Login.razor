@page "/login"
@layout EmptyLayout
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject HttpClient Http
@inject NavigationManager Nav
@inject MyFinance.Client.Auth.JwtAuthenticationStateProvider AuthProvider

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-side auth-side--left">
            <div class="brand">
                <div class="brand-logo">MF</div>
                <div class="brand-text">
                    <h2>MyFinance</h2>
                    <p>Tu panel de control financiero personal.</p>
                </div>
            </div>

            <div class="auth-highlights">
                <h3>Controla tus finanzas con claridad</h3>
                <ul>
                    <li>Registra ingresos y gastos en segundos.</li>
                    <li>Indicadores inteligentes de ahorro y deudas.</li>
                    <li>Visualiza tu progreso mes a mes.</li>
                </ul>
            </div>

            <div class="auth-footer-note">
                <small>Seguridad primero: tus datos se procesan de forma segura y privada.</small>
            </div>
        </div>

        <div class="auth-side auth-side--right">
            <div class="auth-header">
                <h1>Iniciar sesión</h1>
                <p>Ingresa tus credenciales para acceder a tu tablero financiero.</p>
            </div>

            <EditForm Model="Model" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" />

                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <InputText id="email"
                               @bind-Value="Model.Email"
                               class="form-control auth-input"
                               placeholder="tucorreo@ejemplo.com" />
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <div class="password-wrapper">
                        <InputText id="password"
                                   @bind-Value="Model.Password"
                                   type="@(ShowPassword ? "text" : "password")"
                                   class="form-control auth-input"
                                   placeholder="Ingresa tu contraseña" />
                        <button type="button"
                                class="toggle-password"
                                @onclick="TogglePassword">
                            @(ShowPassword ? "🙈" : "👁️")
                        </button>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert @(Success ? "alert-success" : "alert-danger") mt-2">
                        @Message
                    </div>
                }

                <button class="btn-primary auth-button"
                        type="submit"
                        disabled="@IsBusy">
                    @if (IsBusy)
                    {
                        <span class="loader"></span>
                        <span>Verificando...</span>
                    }
                    else
                    {
                        <span>Iniciar sesión</span>
                    }
                </button>
            </EditForm>

            <div class="auth-register-hint">
                <span>¿Aún no tienes una cuenta?</span>
                <a href="/register">Crear una cuenta</a>
            </div>
        </div>
    </div>
</div>

@code {
    UserLoginDto Model = new();
    string? Message;
    bool Success;
    bool IsBusy;
    bool ShowPassword;

    async Task HandleLogin()
    {
        Message = null;
        Success = false;
        IsBusy = true;

        try
        {
            var response = await Http.PostAsJsonAsync("api/auth/login", Model);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginResponseDto>();
                if (!string.IsNullOrWhiteSpace(result?.Token))
                {
                    // 1) Guardar token
                    await LocalStorage.SetItemAsync("authToken", result.Token);
                    // 2) Notificar al AuthenticationStateProvider
                    AuthProvider.NotifyUserAuthentication(result.Token);

                    Success = true;
                    Nav.NavigateTo("/");
                }
                else
                {
                    Message = "La respuesta del servidor no contiene un token válido.";
                }
            }
            else
            {
                var result = await response.Content.ReadFromJsonAsync<Dictionary<string, string>>();
                if (result != null && result.TryGetValue("message", out var msg))
                {
                    Message = msg;
                }
                else
                {
                    Message = "Error al iniciar sesión. Verifica tus datos.";
                }
            }
        }
        catch (Exception ex)
        { Message = $"Ocurrió un error inesperado: {ex.Message}"; }
        finally
        { IsBusy = false; }
    }

    void TogglePassword()
    {
        ShowPassword = !ShowPassword;
    }
}