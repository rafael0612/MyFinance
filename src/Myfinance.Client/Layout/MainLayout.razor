@inherits LayoutComponentBase
@inject MyFinance.Client.Services.AuthService AuthService

@* Providers de MudBlazor: todos autocerrados *@
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span class="me-3">Hola, @userFullName</span>
                    <a href="/logout">Cerrar sesión</a>
                </Authorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private string? userFullName;

    protected override async Task OnInitializedAsync()
    {
        userFullName = await AuthService.GetFullNameAsync();
    }
}